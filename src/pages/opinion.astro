---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

import { FormLoad } from "../components/FormOpinion/FormLoad";
---

<html lang="en">
  <head>
    <MainHead title="Miss Arepas | Opina" description="Opina sobre nosotros" />
    <style>
      .heroImg {
        max-height: 24rem;
        object-fit: cover;
        overflow: hidden;
      }

      .heroImg img {
        width: 100%;
      }
      .wrapperForm {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .form {
        text-align: center;
        margin: 0 auto;
        width: 100%;
        margin-top: 4em;
        padding-left: 1rem;
        padding-right: 5.1rem;
      }
    </style>
  </head>
  <body>
    <Nav />
    <FormLoad client:only="react" />
    <Footer />
  </body>
</html>
