---
const currentYear = new Date().getFullYear();
const currentMonth = new Date().getMonth() + 1;
const currentDay = new Date().getDate();

const month = currentMonth < 10 ? `0${currentMonth}` : currentMonth;
const day = currentDay < 10 ? `0${currentDay}` : currentDay;
---

<footer>
  &copy; {day} / {month} / {currentYear} - Miss Arepas
  <small class="byline"> 🍚👨‍🍳👩‍🍳</small>
</footer>
<style>
  footer {
    font-weight: bold;
    width: 70%;
    margin: 15px auto;
    text-align: center;
    padding-top: 3rem;
    padding-right: 1.4rem;
    padding-bottom: 4rem;
    padding-left: 2rem;
  }

  .byline {
    font-weight: bold;
    display: block;
    margin-top: 0.7rem;
    color: var(--t-subdue);
    font-size: var(--f-d2);
    text-transform: uppercase;
  }
</style>
